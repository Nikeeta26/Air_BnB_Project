<% layout('/layouts/boillerplate') -%>
<body>
    <h3>All Listings</h3>
    <% for(let listing of allListings){ %>
        <div class="card" style="width: 18rem;">
            <img src="<%= listing.image %>"  class="card-img-top" alt="listing_image"/>
            <div class="card-body">
              <p class="card-text"> 
                <%= listing.description %></p>
                <%= listing.title %></p>
            </div>
          </div>
      
        <% } %>
    <!-- <form action="http://localhost:8080/listings/new" method="get"><button>create new</button></form> -->
    <ul>
        <% for(let listing of allListings) { %>
        <li><a href="/listings/<%= listing._id %>"> <%= listing.title %> </a></li>
        <% } %>
      </ul>
</body>

