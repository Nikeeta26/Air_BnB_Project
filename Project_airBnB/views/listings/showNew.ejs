
<% layout('/layouts/boillerplate') -%>
  <body>
    <div class="row mb-3 mt-3">
      <div class="col-8 offset-2 ">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings"  class="row g-3 needs-validation" novalidate>
      <div class="mb-2 ">
      <label for="title" class="form-label">Title</label>
      <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required/>
      <div class="valid-feedback">Tittle looks good</div>
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea
        name="listing[description]"
        placeholder="enter description" class="form-control" required
        ></textarea>
      <div class="invalid-feedback">Please enter the valid Description</div>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">Image URL</label>
      <input class="form-control"
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
      />
    </div>
    <div class="row ">
    <div class="mb-3 col-md-6 ">
      <label for="price" class="form-label">price</label>
      <input name="listing[price]" placeholder="enter price" type="text" class="form-control" required/>
      <div class="invalid-feedback">Please enter the valid price</div>
    </div>
    <div class="mb-3 col-md-6">
      <label for="country" class="form-label">country</label>
      <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required/>
      <div class="invalid-feedback">Please enter the valid country</div>
    </div>
   
  </div>
    <div class="mb-3" >
      <label for="location" class="form-label">location</label>
      <input
        name="listing[location]"
        placeholder="enter location"
        type="text" class="form-control" required
      />
      <div class="invalid-feedback">Please enter the valid location</div>
    </div>
      <button class="btn add-btn mt-3">Add</button>
    </form>
  </div>
</div>
  </body>

