
<% layout('/layouts/boillerplate') -%>
  <body>
    <div class="row">
      <div class="col-8 ">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings">
      <div class="mb-3 ">
      <label for="title" class="form-label">Title</label>
      <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control"/>
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea
        name="listing[description]"
        placeholder="enter description" class="form-control"
      ></textarea>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">Image URL</label>
      <input class="form-control"
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
      />
    </div>
    <div class="row ">
    <div class="mb-3 col-md-6 ">
      <label for="price" class="form-label">price</label>
      <input name="listing[price]" placeholder="enter price" type="number" class="form-control" />
    </div>
    <div class="mb-3 col-md-6">
      <label for="country" class="form-label">country</label>
      <input name="listing[country]" placeholder="enter country" type="text" class="form-control" />
    </div>
  </div>
    <div class="mb-3" >
      <label for="location" class="form-label">location</label>
      <input
        name="listing[location]"
        placeholder="enter location"
        type="text" class="form-control"
      />
    </div>
      <button class="btn btn-danger">Add</button>
    </form>
  </div>
</div>
  </body>

