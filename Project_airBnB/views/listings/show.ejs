<% layout('/layouts/boillerplate') -%>
  <body>
   <div class="row mt-4 md-3 offset-2" >
      <div class="col-8  mt-3">
        <h3><%= listing.title %></h3>
      </div>
    <div class="card col-6 mt-4  show-card listing-card">
      <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing img">
      <div class="card-body">
        
            <%= listing.description %><br>
            &#8377; <%= listing.price.toLocaleString("en-IN") %><br>
            <%= listing.location %><br>
            <%= listing.country %><br>
          </p>
      </div>
    </div>

    <br/>
    <div class="btns md-3 mb-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2 edit-btn">Edit</a>

    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn-dark offset-4 delete-btn">Delete</button>
    </form>
</div>

<div class="col-8  mt-3 mb-5">
  <hr>
<h2>Leave a Review</h2>
<form action="/listings/<%= listing._id %>/reviews" method="post" class="needs-validation" novalidate>
<div class="mb-3 mt-3">
<label for="rating" class="form-label">Rating</label>
<input type="range" name="review[rating]" min="1" max="5" id="rating" class="form-range" required >
</div>
<div>
  <label for="comment" class="form-label">Comment</label>
  <textarea type="text" name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
    
    <div class="invalid-feedback">please submit some comments</div>
  </div>
    <button>Submit</button>
</form>



<p><b>All Reviews</b></p>
<div class="row">
<% for(let review of listing.reviews) { %>
<div class="card col-5 ms-3 mb-3">
  <div class="card-body">
    <h5 class="card-title">Joan Doe</h5>
    <p class="card-text"> <%= review.comment %></p>
    <p class="card-text"><%= review.rating %>&#9733</p>
    </div>
    <form  class="mb-3 " method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
      <button class="btn btn-sm btn-dark">Delete</button>
    </form>
</div>
<% } %>
</div>
</div>
</div>

  </body>

