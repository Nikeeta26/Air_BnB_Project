<% layout('/layouts/boillerplate') -%>
<div class="row mt-4 md-3 offset-1" >
    <h1 class="col-6 offset-2">Login</h1>
    <div class="col-6  mt-3 offset-2">
         <form action="/login" method="post" class="row g-3 mb-4 needs-validation" novalidate>

                <div class="mb-2 ">
                    <label  for="username" class="form-label">Username</label>
                    <input type="text" id="usename" class="form-control" name="username" required/>
                </div>

              <div class="mb-2 ">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" class="form-control" name="password" required/>
              </div>
              <button class="btn btn-primary">Login</button>
         </form>
    </div>
</div>